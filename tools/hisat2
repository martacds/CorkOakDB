PATH=$PATH:/home/martasilva/tools/HISAT2/
   export PATH #alter to match the localization of the hisat2 tool

counter=0
for SRA_ID in `cat $1`
do
   counter=$((counter+1))
   PROJECTNAME=`echo $SRA_ID | cut -c1-6`
   
   cd /home/martasilva/IlluminaData/$PROJECTNAME
   mkdir -p SAM-BAM #creates folder for the .sam file
   cd hisat2
   mkdir -p logs #creates folder for the logs
   cd ..
   echo '~~~~~~~~~~~~' $counter $PROJECTNAME '||' $SRA_ID 'HISAT2 ~~~~~~~~~~~~'

   hisat2 -t --summary-file /home/martasilva/IlluminaData/$PROJECTNAME/SAM-BAM/logs/loghisat2$SRA_ID -x /home/martasilva/tools/HISAT2/qsuber2018/qsuber2018 -1 $SRA_ID*1.fastq -2 $SRA_ID*2.fastq -S /home/martasilva/IlluminaData/$PROJECTNAME/SAM-BAM/hisat$SRA_ID.sam

   cd ..
done

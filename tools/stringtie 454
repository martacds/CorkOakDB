PATH=$PATH:/data/biodata/tools/StringTie
   export PATH #alter to match the localization of the stringtie tool

counter=0
for SRA_ID in `cat $1`
do
   counter=$((counter+1))
   PROJECTNAME=`echo $direc | cut -c1-6`

   cd $PROJECTNAME
   echo '~~~~~~~~~~~~~' $counter $PROJECTNAME '|| STRINGTIE' $SRA_ID '~~~~~~~~~~~~~'

   stringtie /data/biodata/QSuberAlign/$PROJECTNAME/$SRA_ID.bam -A /data/biodata/QSuberAlign/$PROJECTNAME/abundance$SRA_ID -G /data/biodata/rawdata/CorkOak1.0_genomic.gtf -o /data/biodata/QSuberAlign/$PROJECTNAME/$SRA_ID.gtf

   cd ..
done
